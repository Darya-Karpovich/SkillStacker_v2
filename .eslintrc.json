{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "next/typescript",
    "plugin:import/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-empty-object-type": "off",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ]
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["postcss.config.js"]
}
